{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "nsgRules": {
            "value": [
                {
                    "NSGName": "NSG1",
                    "rules":[
                        {
                            "name": "Rule1",
                            "properties": {
                                "description": "Allow HTTPS Inbound",
                                "protocol": "Tcp",
                                "sourcePortRange": "*",
                                "destinationPortRange": "443",
                                "sourceAddressPrefix": "*",
                                "destinationAddressPrefix": "*",
                                "access": "Allow",
                                "priority": "100",
                                "direction": "Inbound"
                            }
                        },
                        {
                            "name": "Rule2",
                            "properties": {
                                "description": "Allow HTTP Inbound",
                                "protocol": "Tcp",
                                "sourcePortRange": "*",
                                "destinationPortRange": "80",
                                "sourceAddressPrefix": "*",
                                "destinationAddressPrefix": "*",
                                "access": "Allow",
                                "priority": "101",
                                "direction": "Inbound"
                            }
                        }
                    ]
                }
            ]
        }
    }
}